<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:theme="@style/Base.Theme.Derana"
    android:layout_margin="10dp"
>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white">


        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/logojogja"
            android:id="@+id/logoProv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="10dp"

            />
        <FrameLayout
            android:layout_width="120dp"
            android:layout_height="2dp"
            android:background="@color/buton"
            android:layout_below="@id/logoProv"
            android:layout_marginTop="8dp"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/namaProv"
            android:text="DKI Jakarta"
            android:layout_below="@id/logoProv"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/jakarta_sans_bold"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/namaPulau"
            android:text="Jawa"
            android:fontFamily="@font/jakarta_sans_semibold"
            android:layout_marginStart="10dp"
            android:layout_below="@id/namaProv"
            android:textSize="12sp"
            android:layout_marginBottom="10dp"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>