<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/sheet_rounded_background"
    android:layout_gravity="bottom"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnSwitch"
        android:layout_alignParentEnd="true"
        android:orientation="horizontal"
        android:background="@drawable/background_switch"
        android:layout_below="@id/v1"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        >
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/ic_grid"
            android:id="@+id/icGridView"
            android:layout_margin="5dp"
            />
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/ic_linier"
            android:id="@+id/icLinearView"
            android:layout_margin="5dp"

            />

    </LinearLayout>

    <View
        android:layout_width="50dp"
        android:layout_height="5dp"
        android:background="@drawable/all_rounded_background"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:id="@+id/v1"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblProduk"
        android:text="Produk Kebahasaan"
        android:fontFamily="@font/jakarta_sans_bold"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_below="@id/v1"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblTtlProduk"
        android:layout_toEndOf="@id/lblProduk"
        android:layout_marginStart="5dp"
        android:layout_alignBottom="@id/lblProduk"
        android:text="(3)"
        android:textSize="14sp"
        android:textColor="#9E9E9E"
        android:fontFamily="@font/jakarta_sans_reguler"/>


    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lblProduk"
        android:layout_marginTop="10dp"
        android:id="@+id/rvProduk"
        android:layout_marginStart="20dp"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblPengatahuan"
        android:text="Pengetahuan Kebahasaan"
        android:fontFamily="@font/jakarta_sans_bold"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_below="@id/rvProduk"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblTtlPengetahuan"
        android:layout_toEndOf="@id/lblPengatahuan"
        android:layout_marginStart="5dp"
        android:layout_alignBottom="@id/lblPengatahuan"
        android:text="(2)"
        android:textSize="14sp"
        android:textColor="#9E9E9E"
        android:fontFamily="@font/jakarta_sans_reguler"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lblPengatahuan"
        android:layout_marginTop="10dp"
        android:id="@+id/rvPengatahuan"

        android:layout_marginStart="20dp"
        android:layout_marginBottom="50dp"/>



</RelativeLayout>