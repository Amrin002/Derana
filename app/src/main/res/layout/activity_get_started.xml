    <Button
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/loginGoogle"
        android:text="Masuk Dengan Facebook"
        android:textAllCaps="false"
        android:textAlignment="center"
        android:fontFamily="@font/jakarta_sans_semibold"
        android:elegantTextHeight="true"
        android:textColor="#6D6D6D"
        android:elevation="0dp"
        android:background="@drawable/facebook_background"
        android:drawableLeft="@drawable/ic_facebook"
        android:drawablePadding="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:id="@+id/loginFacebook"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/lblRegister"
        android:text="Masuk Dengan Google"
        android:textAllCaps="false"
        android:textAlignment="center"
        android:fontFamily="@font/jakarta_sans_semibold"
        android:textColor="@color/white"
        android:background="@drawable/google_background"
        android:drawableStart="@drawable/ic_google"
        android:drawablePadding="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:id="@+id/loginGoogle"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblRegister"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_marginBottom="50dp"

        >
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Belum Punya akun?"
            android:textColor="#898989"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Daftar Disini"
            android:layout_marginStart="5dp"
            android:textColor="@color/primaryColor"
            android:fontFamily="@font/jakarta_sans_semibold"
            android:textStyle="bold"
            android:id="@+id/Register"
            />

    </LinearLayout>











</RelativeLayout>